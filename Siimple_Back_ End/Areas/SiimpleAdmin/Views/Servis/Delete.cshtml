@using Siimple_Back__End.Models

@model Servis;

@{
    ViewData["Title"] = "Delete";
}

<div>
     <div>
        <h4>
            Icon:
        </h4>
        <p>
            <i style="color:red; font-size:25px;" class="@Model.Icon"></i>
        </p>
    </div>
    <div>
        <h4>
            Title:
        </h4>
        <p>
            @Model.Title
        </p>
    </div>
    <div>
        <h4>
            SubTitle:
        </h4>
        <p>
            @Model.Description
        </p>
    </div>
    <div>
        <h4>
            Image:
        </h4>
        <p>
            <img style="width:300px;" src="~/assets/img/@Model.Image"/>
        </p>
    </div>
   
</div>


<form method="post" class="mt-4">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>


